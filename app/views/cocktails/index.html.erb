<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1555195040-3f37d4a2f385?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=900&q=60);">
  <div class="container">
    <h1>Cheers to life!</h1>
    <p>  </p>
    <%= link_to "add a new cocktail", new_cocktail_path, class: 'btn btn-light' %>
  </div>
</div>

  <div class="cards" >
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
        <h2><%= link_to cocktail.name, cocktail_path(cocktail)%></h2>
        <% end %>
      </div>
    <% end %>
  </div>



